

#################################################
# Read string function
#################################################

ml_read_string

	CONSTI 0
	PUSH -4[0]
	PUSH -3[0]
rs_next_char
	DUP
	READC
	GOTO rs_check_end
rs_place_char
	POPI
	CONSTI 1
	ADDI
	GOTO rs_next_char
	
rs_check_end
	DUP
	CONSTI 10
	EQI
	IFNZ rs_done
	PUSH 0[0]
	PUSH 1[0]
	EQI
	IFNZ rs_done
	PUSH 0[0]
	CONSTI 1
	ADDI
	POP 0[0]
	GOTO rs_place_char
rs_done
	ADJUST -1
	CONSTI 0
	POPI
	ADJUST -3
	RET 0
