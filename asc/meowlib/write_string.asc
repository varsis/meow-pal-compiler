################################################################################
# ml_write_string(char*) writes null terminated string
################################################################################
ml_write_string
	PUSH	-3[0]	# pointer to first char in string

write_char
	DUP
	PUSHI		# push char on stack
# check if char = 0
	DUP
	IFZ	write_string_end
# if 0, end
# else, write
	WRITEC
# advance char pointer
	CONSTI	1
	ADDI
	GOTO write_char

write_string_end
	ADJUST -2	# ??? derrp?
	RET	0
