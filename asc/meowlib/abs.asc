
################################################################################
# abs(x) - returns the absolute value of x
################################################################################

ml_abs
	# if x < 0
	PUSH	-3[0]
	CONSTR	0.0
	LTR
	IFZ	ml_abs_done

	# x = -x
	CONSTR	0.0
	PUSH	-3[0]
	SUBR
	POP	-3[0]

ml_abs_done
	RET	0

