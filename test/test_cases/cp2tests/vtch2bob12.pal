	procedure getHours(var employee : Hours);
		var
			myHours : real;
			day	: Days;				
	begin
		day := Mon;
		while day < Sat do
		 begin		  
		  write('Please enter your hours: ');
		  readln(myHours);
                  if myHours < 0 then
		   begin
		    writeln('Invalid entry...not entered.');
		    continue
		   end
		  else
		   begin
		    employee[day] := myHours;
                    day := succ(day);
                   end;
		 end;	 	
	end;	

{**************************************************************************}

	function TotalHours (employee : Hours) : real;
		var
			day     : Days;
			hours   : real;

		function SUCC (aDay : Days): Days;
		begin
			SUCC := succ(aDay);
		end; 

	begin
		hours := 0.0;
		day := Mon;
		while day < Sat do	
		 begin
			hours := hours + employee[day];
			day := SUCC(day);			
		 end;
		TotalHours := hours;
	end;

