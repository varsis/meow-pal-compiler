program test013(input, output);

type
        TGender = (Male, Female);
        TPerson = record
                { name : string[16]; ??? this doesn't look legal }
                name : array[1..4] of char;
                age : integer;
                gender : TGender
                end;

var
        me : TPerson;

begin
        me.name := 'Mike';
        me.age := 21;
        me.gender := Male;

{
        writeln('Name: ', me.name);
        writeln('Age: ', me.age);
        writeln('Gender: ', me.gender);
}
end.
        
