{ Program to raise integer to exponent }
{ From Niklaus Wirth's Collection of Pascal Programs }
program power(input, output);
var
        a, b : integer;

function power(x : integer; n : integer): integer;
         var
                w , z, i : integer;
         begin
                w:= x;
                i := n;
                z := 1;
                while (i <> 0) do
                begin
                        if (odd(i)) then 
                           z:= z*w;
                           w := sqr(w);
                           i := i div 2
                end;
                power := z;
         end { of power } ;

begin
        read(a);
        while (a <> 0) do
        begin
                read(b);
                writeln(a, b, power(a,b));
                read(a)
        end
end. 
