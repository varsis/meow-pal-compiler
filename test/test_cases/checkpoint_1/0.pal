{ 
	Test Case 0: Test for Lexical Errors 
	Invalid identifiers, real constants, and symbols
}

program test0(input, output);
var
	a : real;
	i : integer;
	5ever : real; 	{ invalid identifier }
begin 
	i := 000; 	{ valid int const }

	a := 1E-10; 	{ valid real const }
	a := 000.000; 	{ valid real const }

	// TODO - should we explicilty detect these as invalid constants?
	a := 1E-10.0; 	{ invalid real const }
	a := 1E+10.0; 	{ invalid real const }
	a := 1E1E1;	{ invalid real const }
	a := 1.0.0; 	{ invalid real const }
	a := 100.; 	{ invalid real const }

	a ~ 100.; 	{ invalid symbol}
end.
